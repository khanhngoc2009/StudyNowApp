<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    android:orientation="vertical"
    tools:context=".Activity_Menu"
    >

    <ImageView
        android:id="@+id/img_menu"
        android:layout_width="250dp"
        android:layout_height="250dp"
        android:layout_gravity="center"
        android:layout_marginTop="25dp"
        android:layout_marginBottom="80dp"
        android:src="@drawable/iconstudynow"
        />

    <Button
        android:id="@+id/btn_toan"
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginBottom="25dp"
        android:background="@drawable/radius"
        android:text="Toán Học"
        android:textSize="22dp"
        android:textStyle="bold"
        android:textColor="@color/colorWhite"
        />


    <Button
        android:background="@drawable/radius"
        android:id="@+id/btn_ly"
        android:layout_width="350dp"
        android:text="Vật Lý"
        android:textSize="22dp"
        android:textColor="@color/colorWhite"
        android:textStyle="bold"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginBottom="25dp"/>

    <Button
        android:background="@drawable/radius"
        android:id="@+id/btn_hoa"
        android:layout_width="350dp"
        android:text="Hóa Học"
        android:textSize="22dp"
        android:textColor="@color/colorWhite"
        android:textStyle="bold"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginBottom="25dp"/>

    <Button
        android:background="@drawable/radius"
        android:id="@+id/btn_van"
        android:text="Văn Học"
        android:textSize="22dp"
        android:textColor="@color/colorWhite"
        android:textStyle="bold"
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginBottom="25dp"/>

    <Button
        android:background="@drawable/radius"
        android:id="@+id/btn_anh"
        android:text="Anh Văn"
        android:textSize="22dp"
        android:textColor="@color/colorWhite"
        android:textStyle="bold"
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginBottom="25dp"/>

</LinearLayout>